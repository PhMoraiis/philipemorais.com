generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider  = "postgresql"
  url       = env("DATABASE_URL")
  directUrl = env("DIRECT_URL")
}

model User {
  id                   String    @id @default(cuid())
  name                 String
  email                String    @unique
  password             String

  @@map("users")
}

model Projects {
  id               String   @id @default(cuid())
  name             String
  images           String[]
  shortDescription String
  longDescription  String
  href             String
  status           Status   @default(ONLINE)
  techs            Tech[]

  @@map("projects")
}

model Tech {
  id         String    @id @default(cuid())
  name       String
  icon       String
  Projects   Projects? @relation(fields: [projectsId], references: [id])
  projectsId String?

  @@map("techs")
}

enum Status {
  ONLINE
  DEVELOPMENT
  INTERRUPTED
}
